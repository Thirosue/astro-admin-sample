const recommends = [
  {
    title: "Basic Tee",
    price: 35,
    href: "https://tailwindui.com/img/ecommerce-images/product-page-01-related-product-01.jpg",
    color: "Black",
  },
  {
    title: "Basic Tee",
    price: 35,
    href: "https://tailwindui.com/img/ecommerce-images/product-page-01-related-product-02.jpg",
